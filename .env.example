# Flask Configuration - REQUIRED
SECRET_KEY=your-secret-key-here-change-this-in-production-use-random-string
FLASK_ENV=production

# Database Configuration
# For SQLite (default, easiest for getting started):
DATABASE_URL=sqlite:///fe_exam.db

# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Admin Account - REQUIRED
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here

# Application Settings
DEBUG=False
PORT=5002
HOST=0.0.0.0

# Security Notes:
# 1. Generate a strong SECRET_KEY using: python3 -c "import secrets; print(secrets.token_hex(32))"
# 2. Set a secure ADMIN_PASSWORD
# 3. Never commit the .env file to git (it's in .gitignore)
# 4. Use PostgreSQL for production environments
